<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_wishlist"
    android:id="@+id/main"
    android:background="#FAFAFA"
    android:layoutDirection="rtl"
    >

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layoutDirection="ltr"
        >

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="إنشاء قائمة جديدة"
            android:textSize="22sp"
            android:textColor="#333333"
            android:fontFamily="@font/beiruti_bold"
            android:gravity="center"/>

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/createButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Illustration -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/babyPurple">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:src="@drawable/widdy_wishlist"
                    android:contentDescription="Create wishlist character"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Occasion Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسم المناسبة"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="@font/beiruti_bold"
                android:layout_marginBottom="8dp"
                android:layoutDirection="rtl"
                android:layout_gravity="start"
                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF">

                <EditText
                    android:id="@+id/occasionNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="مثال: حفلة تخرجي من الجامعة"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/beiruti_bold"
                    android:background="@android:color/transparent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:inputType="text"
                    android:maxLines="1"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Occasion Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاريخ المناسبة"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="@font/beiruti_bold"
                android:layout_marginBottom="8dp"
                android:layoutDirection="rtl"
                android:layout_gravity="start"                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="اختر التاريخ"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/beiruti_bold"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/widdy_date"
                        android:contentDescription="Calendar"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Occasion Image -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صورة المناسبة"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="@font/beiruti_bold"
                android:layout_marginBottom="8dp"
                android:layoutDirection="rtl"
                android:layout_gravity="start"                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#E8A4C9"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFF5FB"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Placeholder -->
                    <LinearLayout
                        android:id="@+id/imagePlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/widdy_upload"
                            android:contentDescription="Add image"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اضغط لإضافة صورة"
                            android:textSize="16sp"
                            android:textColor="@color/pink"
                            android:fontFamily="@font/beiruti_bold"/>
                    </LinearLayout>

                    <!-- Image Preview -->
                    <ImageView
                        android:id="@+id/imagePreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:contentDescription="Selected image"/>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- General Notes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ملاحظات عامة  (اختياري)"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="@font/beiruti_bold"
                android:layout_marginBottom="8dp"
                android:layoutDirection="rtl"
                android:layout_gravity="start"                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF">

                <EditText
                    android:id="@+id/notesInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="أي ملاحظات تحب تضيفها..."
                    android:textColorHint="grey"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/beiruti_bold"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:maxLines="5"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Create Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/createWishlistBtn"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="إنشاء القائمة"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/beiruti_extrabold"
                android:backgroundTint="#E8A4C9"
                app:cornerRadius="16dp"
                android:elevation="0dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>